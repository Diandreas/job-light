/* Styles for mobile app appearance with better usability */

/* Better approach for iOS elastic scroll prevention */
html,
body {
    height: 100%;
    width: 100%;
    overflow-x: hidden;
    /* Prevent horizontal scroll only */
    position: relative;
    /* Use relative instead of fixed */
}

body {
    -webkit-overflow-scrolling: touch;
}

/* Proper safe area handling for notched devices */
@media all and (display-mode: standalone) {
    body {
        padding-top: env(safe-area-inset-top);
        padding-bottom: env(safe-area-inset-bottom);
        padding-left: env(safe-area-inset-left);
        padding-right: env(safe-area-inset-right);
    }
}

/* Native-feeling buttons */
button,
.button,
a.button {
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
}

/* Click effect */
button:active,
.button:active,
a.button:active {
    transform: scale(0.97);
}

/* Smooth transitions */
.page-transition {
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

/* Mobile tab bar */
.mobile-tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 8px 0;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
    z-index: 999;
    padding-bottom: env(safe-area-inset-bottom);
    /* Extra padding for notched devices */
}

.dark .mobile-tab-bar {
    background-color: rgba(17, 24, 39, 0.95);
}

.mobile-tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 4px 0;
    color: #6B7280;
    transition: all 0.2s ease-in-out;
}

.mobile-tab-item.active {
    color: #F59E0B;
}

.mobile-tab-item-icon {
    margin-bottom: 4px;
}

.mobile-tab-item-label {
    font-size: 10px;
    font-weight: 500;
}

/* Better form field handling */
input,
textarea,
select {
    font-size: 16px !important;
    /* Prevents iOS zoom */
}

/* Pull to refresh */
.ptr-element {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    color: #F59E0B;
    z-index: 10;
    text-align: center;
    height: 50px;
}

/* MODIFIED: Allow text selection by default, disable only on specific elements */
* {
    -webkit-touch-callout: default;
    -webkit-user-select: text;
    user-select: text;
}

/* Elements where selection should be disabled */
.no-select,
.mobile-tab-bar,
button,
.button,
a.button,
svg,
.icon {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
}

/* Allow selection in form fields */
input,
textarea {
    -webkit-user-select: auto;
    user-select: auto;
}

/* Subtle scrollbars instead of hidden ones */
::-webkit-scrollbar {
    width: 4px;
    height: 4px;
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
}

.dark ::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
}

/* MODIFIED: Better touch action handling */
* {
    touch-action: auto;
    /* Default to auto */
}

/* Apply restrictions only to specific interactive elements */
.swipe-element {
    touch-action: pan-x pan-y;
}
